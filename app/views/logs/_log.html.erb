<%= form_for [@contact, @contact.logs.build] do |f| %>
  <p><%= f.label :comment %><br>
      <%= f.text_field :comment, :required => true %>
  </p>
  <p><%= f.label :responsible %><br>
      <%= f.text_field :responsible, :required => true %>
  </p>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

